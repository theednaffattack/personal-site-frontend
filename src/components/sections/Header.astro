---
import ThemeToggler from '../ThemeToggler'
import HeaderMenu from '../HeaderMenu'
import menuItems from '../../config/nav'
---

<header>
  <nav class='navbar-wrapper flex'>
      <a href="/">Eddie Naff</a>
        <div class='navbar-links flex'>

          {menuItems.map((item) => (
            <a href={item.href} class='navbar-links__item'>
            {item.name}
          </a>
          ))}

          <ThemeToggler client:load />
        </div>
        <HeaderMenu client:load />
  </nav>
</header>

<style>
  .navbar-wrapper {
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 1.75rem 2.25rem;
    position: fixed;
    background: var(--theme-bg);
    box-shadow: var(--theme-shadow);
  }

  .navbar-links {
    align-items: center;
    justify-content: center;
  }

  .navbar-links__item {
    display: none;
  }

  @media screen and (min-width: 550px) {
    .navbar-links__item {
      display: unset;
    }
  }
</style>